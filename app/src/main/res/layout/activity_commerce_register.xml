<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context=".function.activity.RegisterActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_16sdp">

            <TextView
                style="@style/Roboto.Bold.Condensed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40sdp"
                android:text="@string/register_title"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/_20ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:orientation="horizontal">

                <TextView
                    style="@style/Roboto.Condensed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/register_desc"
                    android:textColor="@color/grey_aaaaaa" />

                <TextView
                    android:id="@+id/tv_sign_in"
                    style="@style/Roboto.Condensed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:gravity="center_vertical"
                    android:text="@string/underlines_sign_in"
                    android:textColor="@color/blue_356cd3" />

            </LinearLayout>

            <TextView
                style="@style/Roboto.Bold.Condensed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_24sdp"
                android:text="@string/full_name"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_register_full_name"
                style="@style/Roboto.Condensed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@drawable/edittext_rounded"
                android:hint="@string/register_full_name_hint"
                android:inputType="textPersonName"
                android:padding="@dimen/_16sdp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tv_fullname_error_message"
                style="@style/Roboto.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:textColor="@color/calmRed"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="Username error" />

            <TextView
                style="@style/Roboto.Bold.Condensed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_24sdp"
                android:text="@string/username"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_register_username"
                style="@style/Roboto.Condensed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@drawable/edittext_rounded"
                android:hint="@string/register_username_hint"
                android:inputType="textPersonName"
                android:padding="@dimen/_16sdp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tv_username_error_message"
                style="@style/Roboto.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:textColor="@color/calmRed"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="Username error" />

            <TextView
                style="@style/Roboto.Bold.Condensed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="@string/register_email"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_register_email"
                style="@style/Roboto.Condensed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@drawable/edittext_rounded"
                android:hint="@string/register_email_hint"
                android:inputType="textEmailAddress"
                android:padding="@dimen/_16sdp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tv_email_error_message"
                style="@style/Roboto.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:textColor="@color/calmRed"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="Username error" />

            <TextView
                style="@style/Roboto.Bold.Condensed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="@string/password"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_register_password"
                style="@style/Roboto.Condensed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@drawable/edittext_rounded"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:padding="@dimen/_16sdp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tv_password_error_message"
                style="@style/Roboto.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:textColor="@color/calmRed"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="Username error" />

            <Button
                android:id="@+id/register"
                style="@style/Roboto.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/main_button"
                android:padding="@dimen/_8sdp"
                android:text="@string/sign_up"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>

    </ScrollView>
</layout>