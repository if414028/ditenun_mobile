<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_16sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_username"
                style="@style/Roboto.Mono.SemiBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_24sdp"
                android:text="@string/account_title"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:id="@+id/tv_welcome"
                style="@style/Roboto.Mono.Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="@string/account_subtitle" />

            <TextView
                android:id="@+id/tv_account_type"
                style="@style/Roboto.Mono.Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="Tenun Tarutung" />

            <TextView
                android:id="@+id/tv_email"
                style="@style/Roboto.Mono.Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="tenun.tarutung@gmail.com" />

            <TextView
                android:id="@+id/tv_address_title"
                style="@style/Roboto.Mono.SemiBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="@string/address_title"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:id="@+id/tv_address"
                style="@style/Roboto.Mono.Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="Institut Teknologi Del, Jl. Sisingamangaraja, Sitoluama, Laguboti
Toba Samosir, 22381
Indonesia.
0813-7521-8877" />

            <LinearLayout
                android:id="@+id/btn_list_transaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_24sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_product">

                <TextView
                    style="@style/Roboto.Mono.SemiBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/list_transaction"
                    android:textColor="@color/dark_blue" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_chevron_right_24"
                    app:tint="@color/dark_blue" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>